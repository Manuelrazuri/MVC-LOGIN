@model Auto

<h2>Editar Auto</h2>

<form asp-action="GuardarEditAuto" asp-controller="Auto" method="post">
    <input type="hidden" name="codigo" value="@Model.codigo" />

    <div class="mb-3">
        <label class="form-label">Marca</label>
        <input type="text" name="marca" class="form-control" value="@Model.marca" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Modelo</label>
        <input type="text" name="modelo" class="form-control" value="@Model.modelo" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Cantidad de Llantas</label>
        <input type="number" name="cantidadLlantas" class="form-control" value="@Model.cantidadLlantas" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Cantidad de Ventanas</label>
        <input type="number" name="cantidadVentanas" class="form-control" value="@Model.cantidadVentanas" required />
    </div>
    <button type="submit" class="btn btn-success">Guardar Edicion</button>
    <a class="btn btn-secondary" href="@Url.Action("Index", "Auto")">Cancelar</a>
</form>
