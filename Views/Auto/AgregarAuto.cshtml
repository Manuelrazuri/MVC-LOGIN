@model Auto

<h2>Agregar Nuevo Auto</h2>

<form asp-action="GuardarAuto" asp-controller="Auto" method="post">
    <div class="mb-3">
        <label class="form-label">Marca</label>
        <input type="text" name="marca" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Modelo</label>
        <input type="text" name="modelo" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Cantidad de Llantas</label>
        <input type="number" name="cantidadLlantas" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Cantidad de Ventanas</label>
        <input type="number" name="cantidadVentanas" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
    <a class="btn btn-secondary" href="@Url.Action("Index", "Auto")">Cancelar</a>
</form>